{
  "projects": {
    "client": {
      "src": "client",
      "buildCommand": "npm run build",
      "outputDirectory": "build"
    },
    "server": {
      "src": "server",
      "functions": {
        "server.ts": {
          "runtime": "nodejs16.x"
        }
      }
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/server.ts" },
    { "source": "/(.*)", "destination": "/client/$1" }
  ]
}
